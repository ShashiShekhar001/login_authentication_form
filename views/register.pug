doctype
html
  head
    title login
    style
     include ../static/register.css
  body
   div.login
    h1 Register
    form(action="/register" method="POST")
      label(for="name") Name:
      <input type="text" name="name" id="name" checked="checked" />
      br
      label(for="email") Email:
      <input type="email" name="email" id="email" checked="checked" />
      br
      label(for="password") Password:
      <input type="password" name="password" id="password" checked="checked" />
      br 
      button(type='submit') Register
    a(href="/login") login
